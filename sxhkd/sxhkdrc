super + return
    st

super + r
    dmenu_run

#Close focused window
super + q
    xdo close

# Restart BSPWM
super + shift + r
    bspc wm -r

super + shift + q
    bspc quit

super + {h,j,k,l}
    bspc node -f {west,south,north,east}

super + {0-9}
    bspc desktop -f {0-9}

super + shift + {0-9}
    bspc node -d {0-9} && bspunhide

super + f
    bspfullscreen

super + space
    bspc node focused.tiled -t floating || bspc node focused.floating -t tiled

super + shift + {h,j,k,l}
    bspc node -s {west,south,north,east}


